    <joint name="camera_joint" type="fixed">
        <origin xyz="0.0 0.0 0.6" rpy="0.0 ${pi/2} 0.0"/>
        <parent link="base_link"/>
        <child link="camera"/>
    </joint>
    <gazebo reference="camera_joint">
        <disableFixedJointLumping>true</disableFixedJointLumping>
    </gazebo>
    <link name="camera">
        <inertial>
            <mass value="1"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.01" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.016" length="0.080"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.01" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.016" length="0.080"/>
            </geometry>
        </collision>
    </link>
    <gazebo reference="camera">
        <material>Gazebo/Grey</material>
        <sensor type="camera" name="camera">
            <update_rate>1</update_rate>
            <camera name="camera">
                <pose>0 0 0 0 ${-pi/2} ${pi/2}</pose>
                <horizontal_fov>1.5</horizontal_fov>
                <image>
                    <width>2560</width>
                    <height>1920</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <near>0.01</near>
                    <far>100</far>
                </clip>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.00</stddev>
                </noise>
            </camera>
            <plugin name="camera_controller" filename="libgazebo_modular_camera_plugin.so">
                <camera_name>camera</camera_name>
                <updateRate>0</updateRate>
                <frame_name>camera</frame_name>
            </plugin>
        </sensor>
    </gazebo>

</robot>