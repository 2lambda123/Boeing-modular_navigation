    <!--<xacro:sonar_sensor suffix="8" rotation="1.0"/>-->
    <!--<xacro:sonar_sensor suffix="9" rotation="1.5"/>-->
    <!--<xacro:sonar_sensor suffix="10" rotation="2.0"/>-->
    <!--<xacro:sonar_sensor suffix="11" rotation="2.5"/>-->
